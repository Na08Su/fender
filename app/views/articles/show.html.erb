<% breadcrumb :show_article %>



<div class="container">
  <div class="col-sm-8 col-xs-12">

    <div class="article">

      <div class="article-title">
        <h1><%= @article.title %></h1>
      </div>
      <div class="article-body">
        <%== @article.body %>
      </div>
    </div>
  </div>

  <div class="col-sm-4 col-xs-12 pl30">
    <div class="osusume">
      <h5 class="osusume-title">ランキング</h5>
      <p class="gray-text mini">テキストテキストテキストテキスト</p>
      <hr>
    </div>

    <div class="side-article-list border-left mb30">
      <% @ranking_articles.each_with_index do |article, i| %>
      <!-- 記事を縦に10個くらい表示させる -->
      <!-- 写真 --><!-- 説明文 -->

      <div class="article-list-content">
        <div class="col-sm-3 col-xs-3">
          <div class="mini-img">
            <%= image_tag article.picture.url, :size => "65x55", class: 'side-img' if article&.picture %>
            <span class="icon_rank"><%= i + 1 %></span>
          </div>
        </div>
        <div class="col-sm-9 col-xs-9">
          <div class="article-list-text">
            <%= link_to article.title.truncate(36), article_path(article) %>
          </div>
          <p>by natsuki</p>
        </div>
      </div>
      <% end %>
    </div>



    <div class="ad-space">
      広告入ります
    </div>


    <div class="osusume mt30">
      <h5 class="osusume-title">おすすめの記事</h5>
      <p class="gray-text mini">注目されてる記事だよ</p>
      <hr>
    </div>

    <div class="side-article-list border-left">
      <% @osusume_articles.each do |article| %>
      <!-- 記事を縦に10個くらい表示させる -->
      <!-- 写真 --><!-- 説明文 -->

      <div class="article-list-content">
        <div class="col-sm-3 col-xs-3">
          <div class="mini-img">
            <%= image_tag article.picture.url, :size => "65x55", class: 'side-img' if article&.picture %>
          </div>
        </div>
        <div class="col-sm-9 col-xs-9">
          <div class="article-list-text">
            <%= link_to article.title.truncate(36), article_path(article) %>
          </div>
          <p>by Koki</p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
