<!-- 画像 -->
<div class="container-fluid">

  <!-- main article -->
  <div class="img-wrapper">
    <%= image_tag @article.picture.url, width: "100%", height: "300px" %>
  </div>
  <!-- 日時 -->
  <div class="created_at pl10 pt10">
    記事作成日: <%= @article.created_at.strftime("%Y年 %m月 %d日") %>
  </div>
  <!-- タイトル -->
  <div class="smt-show-title pl10 pt10 pr10">
    <h1 class="font26"><%= @article.title %></h1>
  </div>

  <!-- SNS -->
  <div class="row pt10">
    <div class="col-xs-4 pl20">
      <a href="https://social-plugins.line.me/lineit/share?url=<%= request.url %>" target="_blank"><%= image_tag "line.png", :size => "80x75" %></a>
      <!-- <div class="line-it-button" data-lang="ja" data-type="share-d" data-url="http://appsoku.net" style="display: none;"></div> -->
       <!-- <script src="https://d.line-scdn.net/r/web/social-plugin/js/thirdparty/loader.min.js" async="async" defer="defer"></script> -->
    </div>
    <div class="col-xs-4">
      <a href="https://twitter.com/share?url=<%= request.url %>&text=<%= @article.title %>" rel="nofollow" target="_blank"><%= image_tag "twitter.png", :size => "80x75" %></a>
    </div>
    <div class="col-xs-4 pr10">
      <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.url %>" target="_blank"><%= image_tag "facebook.png", :size => "80x75" %></a>
    </div>
  </div>


</div>


