<!-- 画像 -->
<div class="container-fluid">

  <!-- main article -->
  <div class="img-wrapper">
    <%= image_tag @article.picture.url, width: "100%", height: "300px" %>
  </div>

  <!-- 日時 -->
  <div class="created_at pl10 pt10">
    記事作成日: <%= @article.created_at.strftime("%Y年 %m月 %d日") %>
  </div>
  <!-- タイトル -->
  <div class="smt-show-title pl10 pt10 pr10">
    <h1 class="font26"><%= @article.title %></h1>
  </div>
  <div class="keywords pt10 pl20 pr20 none-style">
    <% @article.label_list.each do |tag| %>
      <%#= tag %>
      <span class="keyword"><%= link_to tag, related_tags_path(tag), class: "tag-link" %>&nbsp;<%#= @article.label.taggings_count %></span>
    <% end %>
  </div>

  <div class="show-pv right pl10 pt10 pr20">
    <p><%= @article.impressionist_count %>views</p>
  </div>

  <!-- SNS -->
  <div class="row pt10 pb20">
    <div class="col-xs-4 pl30">
      <a class="smt-line-logo" href="https://social-plugins.line.me/lineit/share?url=<%= request.url %>" target="_blank">LINE<%#= image_tag "line.png", :size => "100x90" %></a>
    </div>
    <div class="col-xs-4">
      <a class="smt-twitter-logo" href="https://twitter.com/share?url=<%= request.url %>&text=<%= @article.title %>" rel="nofollow" target="_blank">Twitter<%#= image_tag "twitter.png", :size => "100x90" %></a>
    </div>
    <div class="col-xs-3 pr20">
      <a class="smt-facebook-logo" href="https://www.facebook.com/sharer/sharer.php?u=<%= request.url %>" target="_blank">facebook<%#= image_tag "facebook.png", :size => "100x90" %></a>
    </div>
  </div>

  <!-- あらすじ -->
  <div class="top-desc">
    <!-- カラムを追加する -->
    <%= auto_link(simple_format(@article.desc), html: {target: '_blank'}) %>
  </div>

  <div class="ad-infeed">
    インフィード広告
  </div>

  <!-- <div class="mokuji">
    <h1 class="font16">このまとめ記事の目次</h1>
    <ul>
      <li>1. 横浜</li>
      <li>2. 野毛</li>
      <li>3. 伊勢佐木長者町</li>
      <li>4. 湘南台</li>
      <li>5. 鎌倉</li>
    </ul>
  </div> -->

  <div class="smt-main-article">
    <%== auto_link(simple_format(@article.body), html: {target: '_blank'}) %>
  </div>

  <div class="ad-square">
    ad
  </div>


</div>


